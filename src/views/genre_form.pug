extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name))

    if errors
        div.text-danger
           for error in errors
            span!= error.msg

    br
    button.btn.btn-primary(type='submit') Submit
